 /* Node is defined as :

 class Node 

    int data;

   Node left;

    Node right;

    

    */

â€‹

static Node Insert(Node root,int value)
{
        if(root==null)
        {
          Node rootNode=new Node();
          rootNode.data=value;
          return rootNode;  
        }

   Node tmpNode=root;
   Node parent =new Node();
    while(tmpNode!=null)
    {
        parent=tmpNode;
        if(tmpNode.data>=value)
        {
           tmpNode=tmpNode.left;    
         }
        else
        {
            tmpNode=tmpNode.right;
        }
    }
    if(parent.data>=value)
        {
          Node newNode=new Node();
          newNode.data=value;
          parent.left=newNode;
         }
        else
        {
          Node newNode=new Node();
          newNode.data=value;
          parent.right=newNode;
        }
    return root;
    }

